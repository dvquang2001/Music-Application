<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAlbum"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_avatar" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAlbumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:hint="@string/default_hint_song_name"
        android:maxWidth="132dp"
        android:maxLines="1"
        android:textAppearance="@style/SpartanBoldFontText"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardAlbum" />

    <TextView
        android:id="@+id/tvAlbumDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:maxWidth="132dp"
        android:maxLines="1"
        android:text="@string/default_album"
        android:textAppearance="@style/SpartanBoldFontText"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlbumName" />

</androidx.constraintlayout.widget.ConstraintLayout>