<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_dark_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSongNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/default_number_1"
            android:textAppearance="@style/SpartanBoldFontText"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_11" />

        <ImageView
            android:id="@+id/imgSong"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/margin_22"
            android:src="@drawable/img_avatar" />

        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:hint="@string/default_hint_song_name"
            android:textAppearance="@style/SpartanSemiBoldFontText"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_22"
            android:hint="@string/default_time_song"
            android:textAppearance="@style/SpartanSemiBoldFontText"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>